              <div class="weui-btn weui-btn_mini weui-btn_primary" data-index="{{ index }}" data-id="{{ searchUser.id }}" data-username="{{ searchUser.name }}" data-avatar="{{ searchUser.avatar }}" @tap="addUserToUsers">添加</div>
